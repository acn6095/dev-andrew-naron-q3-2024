<!-- banner-promo section -->

{% comment %} Section javascript {% endcomment %}

 {% javascript %}
    let closeButtons = document.querySelectorAll('[data-close]')
    closeButtons.forEach((closeButton) => {
      closeButton.addEventListener(('click'), (e) => {
      e.preventDefault()
      console.log('clicked')
      closeButton.closest('[data-banner-promo]').classList.add('-top-full')
      })
    })
 {% endjavascript %}

{% comment %} Section styling {% endcomment %}

<div
  data-banner-promo
  data-discount-code="{{ section.settings.logic_discount_code }}"
  data-utm-medium="{{ section.settings.logic_utm_medium }}"
  class="absolute w-full bg-[{{ section.settings.background_color }}] text-[{{ section.settings.text_color }}] transition-all duration-700 ease-in-out top-0"
>
  <div class="container mx-auto p-4 flex {{ section.settings.message_text_alignment }}">
    <span data-success-text="{{ section.settings.success_text }}">{{ section.settings.message_text }}</span>
    <button data-close class="pl-4">{{ section.settings.button_text }}</button>
  </div>
</div>

{% schema %}
  {
    "name": "Banner promo",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Banner styling"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#2f73da"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Banner content"
      },
      {
        "type": "inline_richtext",
        "id": "message_text",
        "label": "Message text",
        "default": "Get your 15% off with code GIVEMEAJOB"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "close"
      },
      {
        "type": "inline_richtext",
        "id": "success_text",
        "label": "Success text",
        "default": "Your 15% off discount code GIVEMEAJOB will auto-apply at checkout."
      },
      {
        "type": "select",
        "id": "message_text_alignment",
        "label": "Message text alignment",
        "options": [
          {
            "value": "justify-between",
            "label": "Left"
          },
          {
            "value": "justify-center",
            "label": "Center"
          },
          {
            "value": "justify-end",
            "label": "Right"
          }
        ],
        "default": "justify-between"
      },
      {
        "type": "header",
        "content": "Banner logic",
        "info": "Set url parameters to trigger banner promo appearance"
      },
      {
        "type": "text",
        "id": "logic_utm_medium",
        "label": "UTM medium",
        "default": "social"
      },
      {
        "type": "text",
        "id": "logic_discount_code",
        "label": "Discount code",
        "default": "GIVEMEAJOB"
      }
    ],
    "presets": [
      {
        "name": "Banner promo"
      }
    ]
  }
{% endschema %}